  </section> </center>
  
<section class="content">

    <!-- Default box -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Stock Details</h3>

        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
          <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fas fa-times"></i></button>
        </div>
      </div>
      <div class="card-body table-responsive p-0 "  style="height: 400px;">
        <table class="table table-striped table-head-fixed text-nowrap " >
            <thead>
            <tr>
                <th >Product ID</th>
                <th  >Category</th>
                <th >Brand</th>
                <th  >Stock</th>
                <th >Size</th>
                <th  >Price</th>
            </tr>
            </thead>
            <tbody>
                <% for(var i=0;i<data.length;i++){ %>
                    <tr>
                        <td><%=  data[i].pid  %></td>
                        <td><%=  data[i].category %></td>
                        <td><%=  data[i].brand  %></td>
                        <td><%if (parseInt(data[i].stock)<=10 ){%>
                          <div class="progress progress-xs">
                                        <div class="progress-bar bg-danger" style="width: <%= data[i].stock %>%"></div>
                          </div>
                                <%}else{%>
                          <div class="progress progress-xs">
                                        <div class="progress-bar bg-success" style="width: <%= data[i].stock %>%"></div>
                          </div>
                        <%}%>
                          <small>
                            <%= data[i].stock %>
                          </small>
                        </td>
                        <td><%=  data[i].size %></td>
                        <td><%=  data[i].price%></td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" href="/update"><i class="fas fa-pencil-alt"></i>Edit</a>
                            <form action="/delete" method="post">
                              <input type="text" id="pid" name="pid" value="<%= data[i].pid  %>" hidden><br>
                             
                              <button type="submit" class="btn btn-danger  btn-sm">Delete</button>
                            </form>
                           
                        </td>
                    </tr>
                <% } %>
            </tbody>

        </table>
